---
import { getAbsoluteLocaleUrl } from "astro:i18n";
import { LOCALES } from "~/lib/i18n";

interface Props {
  path: string;
}

const { path } = Astro.props;
---

{
  LOCALES.map((locale) => (
    <link
      rel="alternate"
      hreflang={locale}
      href={getAbsoluteLocaleUrl(locale, path)}
    />
  ))
}
